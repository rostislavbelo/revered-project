  - const hasHeader = true
  - const headerMods = ""
  - const hasFooter = false
  - const hasLoader = false
  - const footerMods = ""
  - const currentUrl = "pricing.html"

block main
  main
    section.pricing
      h1.pricing__title Instantly Connect with Your Leads
      ul.cards
        li.cards__item
          .cards__top
            h2 Basic Survival
            .cards__prise
              button.cards__price-currency $
